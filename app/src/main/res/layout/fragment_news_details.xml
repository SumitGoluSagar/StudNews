<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="0dp"
card_view:cardUseCompatPadding="true"
card_view:cardElevation="2dp"
card_view:cardBackgroundColor="#ffffff"
card_view:cardCornerRadius="4dp"
tools:context=".Details.NewsDetailsFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.mistu.android.studnews.Visual.ThreeTwoImageView
        android:id="@+id/frag_news_detail_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_hori_light"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/frag_news_detail_tag_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/tagline"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/frag_news_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/content"
                android:lineSpacingMultiplier="1.2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000"
                />


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/frag_news_detail_read_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/read_more"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimary"
        android:gravity="end"
        />

</LinearLayout>
</android.support.v7.widget.CardView>
